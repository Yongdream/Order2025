/* 文章场景相关 */
.index {
  height: 100vh;
  width: 100vw;
}
.index .top {
  height: 30vh;
  width: 100vw;
}
.index .top .swiper {
  width: 100%;
  height: 100%;
}
.index .top image {
  width: 100%;
  height: 100%;
}
.index .middle {
  height: 30vh;
  width: 100%;
  margin: 4vh auto;
}
.index .middle .pics {
  height: 15vh;
  width: 100%;
  border-radius: 20%;
  overflow: hidden;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075), 0 2px 2px rgba(0, 0, 0, 0.075), 0 4px 4px rgba(0, 0, 0, 0.075), 0 8px 8px rgba(0, 0, 0, 0.075), 0 16px 16px rgba(0, 0, 0, 0.075);
}
.index .middle .pics image {
  width: 100%;
  height: 100%;
}
.index .middle .comname {
  margin-top: 1vh;
  font-size: 24rpx;
}

/* Tabbar 样式美化 */
.index .tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  background-color: #ffffff; /* Tabbar 背景色 */
  border-top: 1px solid #e5e5e5; /* 边框颜色 */
  box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.1); /* 顶部阴影 */
}

.index .tabbar .tabbar-item {
  flex: 1;
  text-align: center;
  color: #666; /* 默认文字颜色 */
}

.index .tabbar .tabbar-item-active {
  color: #07c160; /* 选中的文字和图标颜色 */
}

.index .tabbar .tabbar-icon {
  width: 24px;
  height: 24px;
}

.index .tabbar .tabbar-icon-active {
  color: #07c160; /* 选中时的图标颜色 */
}

.index .tabbar .tabbar-text {
  font-size: 24rpx;
}
