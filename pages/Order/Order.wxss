.Order {
  width: 90vw;
  margin: 4vh auto 0;
}
.Order .address {
  font-size: 34rpx;
  font-weight: bold;
}
.Order .address .local {
  width: 100%;
}
.Order .address .local .comname {
  height: 50%;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}
.Order .address .local .down {
  width: 100%;
  margin: 2vh 0;
  display: flex;
  justify-content: center;
}
.Order .name {
  margin-top: 4vh;
}
.Order .first {
  height: 5vh;
  border-radius: 5px 5px 0 0;
  background-color: #9a3324;
  padding-left: 10px;
}
.Order .first text {
  line-height: 5vh;
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
}
.Order .judge {
  width: 94%;
  height: 6vh;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #6c6d6e;
  border-bottom: 1px solid #f8f8fa;
}
.Order .judge text {
  padding-left: 5px;
  position: relative;
}
.Order .judge text ::after {
  content: "*";
  position: absolute;
  top: 5%;
  left: 0;
  color: red;
}
.Order .judge .radio_r {
  transform: scale(0.7);
  vertical-align: middle;
  margin-top: -2px;
  margin-bottom: 1px;
}
.Order .upload {
  margin-top: 4vh;
  display: flex;
  justify-content: center;
}
.Order .upload .uploadimage {
  position: relative;
  width: 10vh;
  height: 10vh;
}
.Order .upload .uploadimage image {
  width: 100%;
  height: 100%;
}
.Order .comment {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  display: flex;
  color: #ccc;
  font-size: 22rpx;
  color: #999;
}
.Order .button {
  width: 100%;
  margin-top: 5vh;
  padding-bottom: 1vh;
  text-align: center;
}